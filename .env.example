DATABASE_URL=postgres://user:pass@localhost:5432/cascade
RESEND_API_KEY=your-resend-api-key

# Enable dev faucet in production (for hackathons on devnet)
# Set to 'true' to allow automatic token minting in production environments
CASCADE_ENABLE_DEV_FAUCET=false
NEXT_PUBLIC_CASCADE_ENABLE_DEV_FAUCET=false

# Mint authority keypair (base58 encoded private key)
CASCADE_DEV_FAUCET_AUTHORITY_KEYPAIR=your-base58-encoded-keypair

# USDC Configuration
CASCADE_DEV_FAUCET_USDC_MINT=your-usdc-mint-address
CASCADE_DEV_FAUCET_USDC_DECIMALS=6
CASCADE_DEV_FAUCET_USDC_TOKEN_PROGRAM=token

# USDT Configuration  
CASCADE_DEV_FAUCET_USDT_MINT=your-usdt-mint-address
CASCADE_DEV_FAUCET_USDT_DECIMALS=6
CASCADE_DEV_FAUCET_USDT_TOKEN_PROGRAM=token

# Cluster URLs (optional, has defaults)
CASCADE_SOLANA_DEVNET_RPC=https://api.devnet.solana.com
CASCADE_SOLANA_LOCALNET_RPC=http://127.0.0.1:8899

# Vercel Flags SDK
# Base64url-encoded 32 random bytes used by Flags Explorer and precompute signing
FLAGS_SECRET=your-flags-secret

# Statsig (required for server-side flag evaluation)
STATSIG_SERVER_API_KEY=your-statsig-server-api-key

# Statsig provider metadata for Vercel Flags Explorer (optional but recommended)
STATSIG_PROJECT_ID=your-statsig-project-id
STATSIG_CONSOLE_API_KEY=your-statsig-console-api-key

# Optional Edge Config bootstrap for lower-latency Statsig evaluations
EXPERIMENTATION_CONFIG=your-experimentation-edge-config-connection-string
EXPERIMENTATION_CONFIG_ITEM_KEY=statsig
